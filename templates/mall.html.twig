{{ dump( categories ) }}
<div class='mall-admin-page'>
	<div class='admin-category'>
		<div class='title'>Add a parent Category</div>
		<form class='form-add' action='/mall/admin/category'>
			<fieldset>
				<!--temp commented due to css conflict <legend></legend>-->
				<div class="row">
					<div class="value">
						<div class="element">
							<input type="hidden" name="call" value="add">
							<input type="hidden" name="parent_id" value="0">
							<input type="text" name="name">						
							<input type="submit" value="Submit">
						</div>
					</div>
				</div>
			</fieldset>
		</form>
		<div class='list'>
			<table cellpadding=0 cellspacing=0 width='100%'>
			{% for k,v in categories %}
				<tr valign='top'>
				{% set indent = v.depth * 10 %}
					<td>
						<div class='category' id='{{ v.id }}' parent_id='{{ v.parent_id }}' depth='{{ v.depth }}' style='margin-left:{{ indent }}px;'>
							{{ v.name }}
						</div>
					</td>
					<td width='90%'>
						<form class='form-add' action='/mall/admin/category'>
							<fieldset>
								<!--temp commented due to css conflict <legend></legend>-->
								<div class="row">
									<div class="value">
										<div class="element">
											<input type="hidden" name="call" value="add">
											<input type="hidden" name="parent_id" value="{{ v.id }}">
											<input type="text" name="name">						
											<input type="submit" value="Submit">
										</div>
									</div>
								</div>
							</fieldset>
						</form>	
					</td>
				</tr>
			{% endfor %}
			</table>
		</div>
	</div>
</div>
