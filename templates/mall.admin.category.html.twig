<div class='mall-admin-page'>
	<div class='title'>Add a parent Category</div>
	{% include 'modules/mall/templates/error.html.twig' %}
	<div class='top-menu'>
		<a href='/mall/admin'>Admin Page</a>		
	</div>
    <div class='content-wrapper admin-category'>        
        <form class='form-add' action='/mall/admin/category/group/add'>
            <fieldset>
                <!--temp commented due to css conflict <legend></legend>-->
                <div class="row">
                    <div class="value">
                        <div class="element">							
                            <input type="text" name="name">
                            <input type="submit" value="Add">
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>
        <div class='list'>
            {% for group in data.groups %}
                <div class='category' category-id='{{ group.id.value }}'>                
						<span class='label'>
							<span class='category-name'>
								<a href="/mall/admin/category/group/list?parent_id={{ group.id.value }}">{{ group.name.value }}</a>
							</span>by
							<span class="name user-profile" uid="{{ group.user_id.target_id }}">{{ group.user_id.entity.name.value }}</span>
						</span>
					<div class='button-wrapper'>
						<span class='command edit' root-id = '0'id='{{ group.id.value }}'>Edit</span>
                        <a href="/mall/admin/category/group/del?id={{ group.id.value }}" onclick="return confirm('Delete {{ group.name.value }} and all of its subcategories?');">Delete</a>
					</div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
