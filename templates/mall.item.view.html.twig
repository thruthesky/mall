{% set item = data.item.entity %}
{% set images = data.item.images %}
{% set price = data.item.rendered_price %}
{% set status = data.status %}

<div class='mall-view'>
	{% if myUid == item.user_id.target_id %}
		<div class='user-commands'>
			<a href="/mall/item/add?item_id={{ item.id.value }}">EDIT</a>
			<a href="/mall/item/delete?item_id={{ item.id.value }}" onclick="return item_delete( '{{ item.name.value }}' );">DELETE</a>
		</div>
	{% endif %}
	<div class='title top'>{{ item.title.value }}</div>
	<table cellpadding=0 cellspacing=0 width='100%'>
	<tr valign='top'>
		<td>
			<div class='image-list'>	
			{% if images.item_image %}
				<div class='top-image'>
				{% set count1 = 1 %}
					{% for item_image in images.item_image %}					
							{% if count1 == 1 %}
								{% set active = " class=is-active"%}
							{% else %}
								{% set active = ""%}
							{% endif %}
							<img{{ active }} fid='{{ item_image.fid }}' src='{{ item_image.url_original }}'/>
						{% set count1 = count1 + 1 %}
					{% endfor %}
				</div>
				<div class='thumbnails'>
					<img class='arrow left' src='/modules/mall/img/arrow_left.png'/>
					<img class='arrow right' src='/modules/mall/img/arrow_right.png'/>
					<div class='inner'>
						{% set count2 = 1 %}{% for item_image in images.item_image %}{% if count2 == 1 %}{% set active = " class=is-active"%}{% else %}{% set active = ""%}{% endif %}<img{{ active }} fid='{{ item_image.fid }}' src='{{ item_image.url_medium }}'/>{% set count2 = count2 + 1 %}{% endfor %}
					</div>
				</div>		
				<div class='content-text'>
					{{ item.content.value }}
				</div>
			{% else %}
				<h1>No item images uploaded</h1>
			{% endif %}
			</div>	
		</td>
		<td width='295'>
			<div class='details product'>
				<div class='title'>Product Details</div>
				<div class='table-wrapper'>
					<table cellpadding=0 cellspacing=0 width='100%'>
						<tr class='price'>
							<td><span class='table-label'>Price</span></td><td width='70%'><span class='value'>{{ price }}</span></td>
						</tr>
						<tr>
							<td><span class='table-label'>Condition</span></td><td width='70%'>{{ status[ item.status.value ] }}</td>
						</tr>
						<tr>
							<td><span class='table-label'>Brand</span></td><td width='70%'>{{ item.brand.value }}</td>
						</tr>
						<tr>
							<td><span class='table-label'>Model</span></td><td width='70%'>{{ item.model.value }}</td>
						</tr>
						<tr>
							<td><span class='table-label'>Year Model</span></td><td width='70%'>{{ item.model_year.value }}</td>
						</tr>
						<tr>
							<td><span class='table-label'>Posted on</span></td><td width='70%'>{{ item.created.value|date("M. d Y") }}</td>
						</tr>
						<tr>
							<td><span class='table-label'>Location</span></td><td width='70%'>{{ item.location.value }}</td>
						</tr>
						<tr class='contact'>
							<td><span class='table-label'>Contact no.</span></td><td width='70%'><span class='value'>{{ item.mobile.value }}</span></td>
						</tr>						
					</table>
				</div>
			</div>
			<div class='details seller'>
				<div class='title'>Seller Details</div>
				<div class='table-wrapper'>
					{% set name = item.user_id.entity.field_first_name.value  ~ " " ~ item.user_id.entity.field_middle_name.value ~ " " ~ item.user_id.entity.field_last_name.value%}
					<table cellpadding=0 cellspacing=0 width='100%'>
						<tr>
							<td><span class='table-label'>Username</span></td><td width='70%'>{{ item.user_id.entity.name.value }}</td>
						</tr>
						<tr>
							<td><span class='table-label'>Name</span></td><td width='70%'>{{ name }}</td>
						</tr>
						<tr>
							<td><span class='table-label'>Address</span></td><td width='70%'>{{ item.province.value }}, {{ item.city.value }}</td>
						</tr>				
					</table>
				</div>
			</div>
		</td>
	</tr>
	</table>
</div>

{% set total_items = data.total_items %}
{% set items_per_page = input.limit %}
{% if items_per_page is empty %}
	{% set items_per_page = 15 %}
{% endif %}
{% include '/modules/mall/templates/mall.item.list.html.twig' %}


{% include '/modules/mall/templates/mall.item.pagination.html.twig' %}